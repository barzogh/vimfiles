" On met la ligne du curseur en surbrillance
" ------------------------------------------------------------
set cursorline

" Transparence
" ------------------------------------------------------------
set transp=20
set transp=10
set transp=5

" Police
" ------------------------------------------------------------
set guifont=Monaco:h12

" Schéma de couleur
" ------------------------------------------------------------
colorscheme twilight3

" Options 'fullscreen'
" ------------------------------------------------------------
set fuoptions=maxvert,maxhorz

" Options de l’interface
" ------------------------------------------------------------
set guioptions-=L
set guioptions-=l
set guioptions+=R
set guioptions-=r 
set guioptions-=T
